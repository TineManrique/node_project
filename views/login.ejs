<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card card-signin">
        <div class="card-body">
          <img src="./img/logo1.png" alt="logo" class="img-logo">
          <% include ./partials/messages %>
          <form class="form-signin" action="/login" method="POST">
            <div class="form-label-group">
                <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                required
                autofocus
              />
              <label for="email">Email address</label>
            </div>

            <div class="form-label-group">
                <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter Password"
                required
              />
              <label for="password">Password</label>
            </div>

            <div class="custom-control custom-checkbox mb-3">
              <input type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">Remember password</label>
            </div>
            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Log in</button>
            <hr class="my-4">
            <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i href="/auth/google" class="fab fa-google mr-2"></i> Log in with Google</button>
            <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i href="/auth/facebook" class="fab fa-facebook-f mr-2"></i> Login in with Facebook</button>
            <label class="custom-control-label" for="customCheck1">No Account? <a href="/register">Register</a></label>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>